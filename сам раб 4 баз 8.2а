#include <iostream>

using namespace std;

int main()

{

const int n = 5;

for (int i = 1; i <= n; i++)

{

for (int j = 1; j <= i; j++)

{

cout « "5 ";

}

cout « endl;

}

return 0;

}

//сам раб 4 баз, 8.2б

#include <iostream>

using namespace std;

int main()

{

const int n = 5;

for (int i = n; i >= 1; i--)

{

for (int j = 1; j <= i; j++)

{

cout « "1 ";

}

cout « endl;

}

return 0;

}
