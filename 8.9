//8.9 Напечатать полную таблицу умножения в виде:

1 * 1 = 1

2 × 1 = 2

1 x 2 = 2

2 × 2 = 4

9 x 9 = 81

9 x 1 = 9

9 x 2 = 18

1 * 9 = 9

2 x 9 = 18

9 x 9 = 81

#include <iostream>

using namespace std;

int main() {

for (int i = 1; i <= 9; i++) {

for (int j = 1; j <= 9; j++) {

cout << i << " * " << j << " = " << i*j << endl;

}

cout << i << " x " << i << " = " << i*i << endl;

cout << endl;

}

cout << "9 x 9 = 81" << endl;

cout << "1 x 9 = 9" << endl;

cout << "2 x 9 = 18" << endl;

cout << "9 x 1 = 9" << endl;

cout << "9 x 9 = 81" << endl;

return 0;

}
